{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es2022",
      "noImplicitAny": true,
      "removeComments": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
    }
  }